<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_order_name"
        android:text="111"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_order_status"
        android:text="11111"
        android:layout_marginTop="10dp"
        android:paddingRight="10dp"
        android:layout_alignParentRight="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout"
        android:weightSum="2"
        android:layout_below="@id/tv_order_name"
        >
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_taroter"
        android:padding="10dp"
       android:layout_weight="1"
        android:text="11111111111111111111"
        />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tarot_price"
            android:padding="10dp"
            android:layout_weight="1"
            android:text="11111111111111111111"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_good_comment"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/layout"
        android:layout_alignParentRight="true"
        android:layout_marginRight="110dp"
        android:background="@drawable/selectable_blue_trans_radius"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="修改评论"
        android:visibility="gone"
        android:textColor="@drawable/selectable_text_color_white_blue"
        android:textSize="16dp" />
    <Button
        android:id="@+id/btn_delete_comment"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/layout"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/selectable_blue_trans_radius"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="删除评论"
        android:textColor="@drawable/selectable_text_color_white_blue"
        android:textSize="16dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/btn_delete_comment"
        ></View>
</RelativeLayout>

