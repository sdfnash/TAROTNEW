<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/grey_3">

            <com.netease.sdfnash.uikit.common.ui.imageview.ImageViewEx
                android:id="@+id/tarot_head"
                app:exiv_default_image_res="@drawable/nim_default_img"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
android:scaleType="fitXY"
                android:src="@drawable/head_icon_1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tarot_head"
                >

                <TextView
                    android:id="@+id/tarot_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="塔罗师XX"
                    android:textColor="@color/text_is_select"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/tarot_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_stat_05" />
            </RelativeLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <Button
                android:id="@+id/tarot_judge"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/taluo_red"
                android:clickable="true"
                android:focusable="false"
                android:text="@string/find_grid_judge"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <Button
                android:id="@+id/tarot_comm"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/taluo_blue"
                android:clickable="true"
                android:focusable="false"
                android:text="@string/find_grid_consult"
                android:textColor="@color/white"
                android:textSize="17dp" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>

