<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
    tools:context="com.tarot.sdfnash.tarot.registnew.activity.MyCommentActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextAppearance="@style/Toolbar.TitleText">
        </android.support.v7.widget.Toolbar>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grey_1"
            ></View>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:id="@+id/radio_group_comment"
            android:orientation="horizontal"
            android:weightSum="4"
            android:visibility="gone"
            >
            <RadioButton
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="全部"
                android:id="@+id/radio_comment_all"
                android:textSize="15sp"
                android:button="@null"
                android:layout_gravity="center"

                android:layout_weight="1"
                android:checked="true"
                android:textColor="@color/selectable_color"
                android:gravity="center"
                android:padding="10dp"
                />
<View
    android:layout_width="1px"
    android:layout_height="match_parent"
    android:background="@color/grey_1"
    ></View>
            <RadioButton
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="好评"
                android:id="@+id/radio_comment_good"
                android:textSize="15sp"
                android:button="@null"
                android:layout_gravity="center"

                android:layout_weight="1"
                android:textColor="@color/selectable_color"
                android:gravity="center"
                android:padding="10dp"
                />
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/grey_1"
                ></View>
            <RadioButton
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="中评"
                android:id="@+id/radio_comment_middle"
                android:textSize="15sp"
                android:button="@null"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textColor="@color/selectable_color"
                android:gravity="center"
                android:layout_weight="1"
                />
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/grey_1"
                ></View>
            <RadioButton
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="差评"
                android:id="@+id/radio_comment_bad"
                android:textSize="15sp"
                android:button="@null"
                android:layout_gravity="center"
                android:textColor="@color/selectable_color"

                android:gravity="center"
                android:layout_weight="1"
                android:padding="10dp"
                />
        </RadioGroup>

    </android.support.design.widget.AppBarLayout>
    <com.tarot.sdfnash.tarot.registnew.View.PagingListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_insult"
        ></com.tarot.sdfnash.tarot.registnew.View.PagingListView>
</LinearLayout>
