<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="服务项目"
    android:paddingLeft="20dp"
    android:paddingTop="10dp"
    android:textSize="20sp"
    android:paddingBottom="10dp"
    android:id="@+id/title"
    android:textColor="@color/text_is_select"
    />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_below="@id/title"
    android:paddingTop="15dp"
    android:id="@+id/head"
    android:layout_marginTop="10dp"
    android:paddingBottom="15dp"
    android:layout_height="wrap_content">
    <com.netease.sdfnash.uikit.common.ui.imageview.CircleImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/img_service_avatar"
        android:src="@drawable/head_icon_1"
        android:layout_marginLeft="20dp"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tv_service_name"
    android:layout_toRightOf="@id/img_service_avatar"
    android:text="111"
    android:paddingLeft="10dp"
    android:gravity="center"
    android:textSize="15sp"
    android:layout_centerVertical="true"
    />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_service_point"
        android:src="@drawable/icon_rts_send"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        />
</RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_below="@id/head"
        android:id="@+id/service_list"
        android:layout_height="wrap_content"></ListView>
    <TextView
        android:id="@+id/btn_insult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/text_is_select"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="立即咨询"
        android:textColor="@color/white"
        android:textSize="20sp" />
</RelativeLayout>