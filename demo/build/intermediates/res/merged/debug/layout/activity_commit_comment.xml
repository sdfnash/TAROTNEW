<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tarot.sdfnash.tarot.registnew.activity.CommitCommentActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextAppearance="@style/Toolbar.TitleText"></android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@color/taluo_blue"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="评价XXX的服务"
        android:textColor="@color/white" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="亲对本次服务的总体评价如何？"
        android:textColor="@color/taluo_blue"
        android:paddingTop="15dp"
        android:textSize="15sp"

        android:paddingLeft="20dp"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/radio_group_comment"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <View
            android:layout_width="50dp"
            android:layout_height="match_parent"></View>
        <RadioButton
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="好评"
            android:id="@+id/radio_comment_good"
            android:textSize="15sp"
            android:button="@null"
            android:background="@drawable/radiobutton_select"
            android:checked="true"
            android:textColor="@color/taluo_blue"
            android:gravity="center"
            />
        <View
            android:layout_width="50dp"
            android:layout_height="match_parent"></View>
        <RadioButton
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="中评"
            android:id="@+id/radio_comment_middle"
            android:textSize="15sp"
            android:button="@null"
            android:textColor="@color/taluo_blue"
            android:background="@drawable/radiobutton_select"
            android:gravity="center"
            />
        <View
            android:layout_width="50dp"
            android:layout_height="match_parent"></View>
        <RadioButton
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="差评"
            android:id="@+id/radio_comment_bad"
            android:textSize="15sp"
            android:button="@null"
            android:textColor="@color/taluo_blue"
            android:background="@drawable/radiobutton_select"
            android:gravity="center"
            />
    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/gray7"
        ></View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下次是否依然愿意这位塔罗师为您提供服务？"
        android:textColor="@color/taluo_blue"
        android:paddingTop="15dp"
        android:textSize="15sp"

        android:paddingLeft="20dp"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/radio_group_will"
        android:weightSum="3"
        >
        <View
            android:layout_width="50dp"
            android:layout_height="match_parent"></View>
        <RadioButton
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="愿意"
            android:id="@+id/radio_again_will"
            android:textSize="15sp"
            android:button="@null"
            android:background="@drawable/radiobutton_select"
            android:checked="true"
            android:textColor="@color/taluo_blue"
            android:gravity="center"
            />
        <View
            android:layout_width="50dp"
            android:layout_height="match_parent"></View>
        <RadioButton
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="不愿意"
            android:id="@+id/radio_again_unwill"
            android:textSize="15sp"
            android:button="@null"
            android:textColor="@color/taluo_blue"
            android:background="@drawable/radiobutton_select"
            android:gravity="center"
            />
    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/gray7"
        ></View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="亲对咨询满意吗，可以评几星呢？"
        android:textColor="@color/taluo_blue"
        android:paddingTop="15dp"
        android:textSize="15sp"
        android:paddingLeft="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="响应速度"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_gravity="center_vertical"
        />
    <RatingBar
        android:layout_width="wrap_content"
        android:id="@+id/ratebar_speed"
        android:layout_height="wrap_content" /></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务态度"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_gravity="center_vertical"
            />
        <RatingBar
            android:layout_width="wrap_content"
            android:id="@+id/ratebar_service"
            android:layout_height="wrap_content" /></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="准确程度"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_gravity="center_vertical"
            />
        <RatingBar
            android:layout_width="wrap_content"
            android:id="@+id/ratebar_right"
            android:layout_height="wrap_content" /></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帮助力度"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_gravity="center_vertical"
            />
        <RatingBar
            android:layout_width="wrap_content"
            android:id="@+id/ratebar_help"
            android:layout_height="wrap_content" /></LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="反馈"
        android:textColor="@color/taluo_blue"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textSize="15sp"
        android:paddingLeft="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/comment_edit"
        android:background="@drawable/shape_grey_stroke"
        android:hint="期待亲提供公正，客观的评论，以便我们给予亲更好的服务。"
        />
    <Button
        android:id="@+id/commit_btn"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dip"
        android:background="@drawable/nim_red_round_button_selector"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="17sp" />
    </LinearLayout>
</ScrollView>
</LinearLayout>
